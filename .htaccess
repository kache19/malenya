RewriteEngine On

# Set environment variables for database (update these values for malenyapharmacy.com)
# SetEnv DB_NAME "your_actual_db_name"
# SetEnv DB_USER "your_actual_db_user"
# SetEnv DB_PASSWORD "your_actual_db_password"

# Route /api/* requests to proxy (which forwards to working server)
RewriteRule ^api/(.*)$ backend_php/api_proxy.php/api/$1 [L,QSA]

# Frontend SPA routing - send everything else to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/backend_php/
RewriteRule ^(.*)$ index.html [L,QSA]

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# CORS headers
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"
